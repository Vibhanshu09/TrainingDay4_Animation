<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tcsexam.trainingday4.MainActivity">

    <TextView
        android:id="@+id/anim_text_fadein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:text="Welcome to Fadein" />

    <TextView
        android:id="@+id/anim_text_fadeout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:text="Welcome to Fadeout" />

    <TextView
        android:id="@+id/anim_text_blink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:text="Welcome to Blink" />

    <TextView
        android:id="@+id/anim_text_move"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:text="Welcome to Move" />

    <TextView
        android:id="@+id/anim_text_rotate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:text="Welcome to Rotate" />

    <TextView
        android:id="@+id/anim_text_scale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:text="Welcome to Scale" />
</LinearLayout>
